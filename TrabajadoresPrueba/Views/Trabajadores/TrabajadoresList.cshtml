@model IEnumerable<TrabajadoresPrueba.Models.Trabajadores>

@{
    ViewData["Title"] = "TrabajadoresList";
}

<h1>Lista de trabajadores</h1>

<p class="float-left">
    <a asp-action="Create" class="btn btn-outline-primary">Nuevo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
           
            <th>
                
                Tipo de Documento
            </th>
            <th>
                Numero de Documento
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Departamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distrito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.TipoDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDocumento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo)
            </td>
         
            <td>
                @Html.DisplayFor(modelItem => item.Departamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distrito)
            </td>
            <td>
                @Html.ActionLink("Edit", "Create", new {  id=item.Id,item.TipoDocumento,item.NumeroDocumento,item.Nombres,item.Sexo,item.IdDepartamento,item.IdProvincia,item.IdDistrito  },new{ @class="btn btn-success"}) 
                @Html.ActionLink("Delete", "DeleteTb", new { id=item.Id }, new{@class="btn btn-danger",onclick="return confirm('¿Está seguro de eliminar el registro?')"})
            </td>
        </tr>
}
    </tbody>
</table>
